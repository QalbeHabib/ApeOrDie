{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["tests/**/*.ts", "scripts/**/*.ts", "Anchor.toml"],
  "exclude": ["node_modules", "programs/ApeOrDie/target"]
}
